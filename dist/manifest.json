{
    "manifest_version": 3,
    "name": "React Chrome Sidebar",
    "version": "1.0",
    "description": "Chrome Extension with floating sidebar using chrome-sidebar",
    "permissions": ["scripting", "activeTab", "storage"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "commands": {
      "toggle-sidebar": {
        "suggested_key": {
          "default": "Alt+S",
          "mac": "Alt+S"
        },
        "description": "Toggle the sidebar"
      }
    },
    "web_accessible_resources": [
      {
        "resources": ["sidebar.html", "assets/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  